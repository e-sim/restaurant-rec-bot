{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "size": "stretch",
      "url": "https://cdn.insteading.com/wp-content/uploads/2014/12/shutterstock_95710771-600x400.jpg"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Welcome to the restaurant recommendation bot!",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": "yes",
      "text": "I can help you find a restaurant based on cuisine, price, and delivery options.",
      "wrap": true,
      "maxLines": 0
    }
  ]

}
